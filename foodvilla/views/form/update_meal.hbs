

{{>_header}}
  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/load-data/meal-kits"><i class="fas fa-angle-double-left"></i> All Meals</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Meal</h2>
            <span class="text-light">Use the below form to Update a Meal</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Title</label>
            <input type="hidden" name="id" value="{{Mealkit.Title}}">
            <input type="text" name="Title" value="{{Title}}" placeholder="">
        </div>
           <div class="form-group">
            <label for="name" class="text-light">Description</label>
            <input type="hidden" name="id" value="{{Description}}">
            <input type="text" name="Description" value="{{Description}}" placeholder="">
        </div>
           <div class="form-group">
            <label for="name" class="text-light">Price</label>
            <input type="hidden" name="id" value="{{Price}}">
            <input type="text" name="Price" value="{{Price}}" placeholder="">
        </div>
           <div class="form-group">
            <label for="name" class="text-light">TopMeal</label>
            <input type="hidden" name="id" value="{{TopMeal}}">
            <input type="text" name="TopMeal" value="{{TopMeal}}" placeholder="">
        </div>
           <div class="form-group">
            <label for="name" class="text-light">Image</label>
            <input type="hidden" name="id" value="{{Image}}">
            <input type="text" name="Image" value="{{Image}}" placeholder="">
        </div>
      

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
