<section class="menu">
    {{#each allKits}}
    <div class="heading">
      <h2>{{mealCategory}}</h2>
    </div>   
    <div class="onMenu-container">
        {{#each mealKits}}
            <div class="box">
                <div class="box-img">
                    <img src={{Image}} alt="{{Title}}">
                    <h2>{{Title}}</h2>
                    <h4>{{Description}}</h4>
                    <span class="btn-time">{{Time}}</span>
                    <span class="btn">{{Price}}</span>
                </div>
            </div>
        {{/each}}
    </div>
       {{/each}}
</section>