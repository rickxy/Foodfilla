<section class="menu">
      
    <div class="onMenu-container">
        {{#each mealKits}}
        <a href="details/:Title"> 
             <div class="box">
                <div class="box-img">
                    <img src={{Image}} alt="{{Title}}">
                    <h2>{{Title}}</h2>
                    <h4>{{Description}}</h4>
                    <span class="btn-time">{{Time}}</span>
                    <span class="btn">{{Price}}</span>
                </div>
            </div>
        </a>    
        {{/each}}
    </div>
      
</section>